<div class="container m-auto max-w-2xl px-4 pt-8 pb-10">
  <h1 class="text-4xl font-bold text-red-800 font-serif mb-6">RubyJobs.pl</h1>
  <div class="border-b pb-5">
    <p class="text-gray-800 text-xl mb-2"><%= @job.company.name %></p>
    <p class="text-2xl font-bold"><%= @job.title %></p>
    <p class="text-gray-800 mb-2"><%= @job.location_names %></p>
    <p class="text-gray-800"><%= @job.salary %> (<%= @job.salary_type %>)</p>
  </div>
  <div class="mt-5 border-b pb-6 leading-relaxed text-gray-800 mb-6">
    <div class="trix-content" ng-bind-html="$ctrl.offer.body">
      <%= @job.description %>
    </div>
  </div>
  <%= link_to "Aplikuj teraz", @job.apply_link, class: "bg-red-600 text-white font-bold px-6 py-4 inline-block text-lg rounded" %> 
</div>
