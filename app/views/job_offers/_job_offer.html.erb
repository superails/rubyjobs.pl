<%= link_to job_offer do %>
  <div class="bg-white border border-gray-200 flex px-6 py-5 mb-6">
    <div class="w-20 h-20 md:w-16 md:h-16 lg:w-20 lg:h-20 mr-6 self-center">
      <% if job_offer.logo.attached? %>
        <%= image_tag(job_offer.logo, class: "max-w-full max-h-full") %>
      <% elsif job_offer.company.logo.attached? %>
        <%= image_tag(job_offer.company.logo, class: "max-w-full max-h-full") %>
      <% end %>
    </div>
    <div class="flex-grow">
      <div class="flex justify-between">
        <p><%= job_offer.company.name %></p>
        <p><%= job_offer.formatted_salary %> (<%= job_offer.salary_type %>)</p>
      </div>
      <p class="text-2xl font-header font-medium my-2"><%= job_offer.title %></p>
      <%= job_offer.location_names %>
    </div>
  </div>
<% end %>
