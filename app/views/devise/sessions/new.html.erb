<div class="container m-auto max-w-xl px-4 pt-8 pb-10">
  <h2 class="text-2xl text-red-600 border-b pb-2 mb-5">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email, class: "block text-gray-700 mb-2 text-lg" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border px-2 py-2 mb-1 rounded bg-gray-100 focus:bg-white" %>

      <%= f.label :password, class: "block text-gray-700 mb-2 text-lg" %>
      <%= f.password_field :password, class: "w-full border px-2 py-2 mb-1 rounded bg-gray-100 focus:bg-white" %>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.label :remember_me, class: "text-gray-700 block mt-2" do %>
          <%= f.check_box :remember_me, class: "mr-2 align-middle" %>
          <span class="">
            ZapamiÄ™taj mnie
          </span>
        <% end %>
      </div>
    <% end %>

    <%= f.submit "Login", class: "bg-red-600 text-white px-12 py-2 font-bold rounded mt-3" %>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
