  <div class="flex flex-col mb-4">
    <a href="<%= "#{root_url}blog" %>">Blog</a>
  </div>
  <div class="flex flex-col">
    <% if user_signed_in? %>
      <%= link_to('Wyloguj się', destroy_user_session_path, method: :delete) %>        
    <% else %>
