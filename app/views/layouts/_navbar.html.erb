<div class="border-b border-gray-200 overflow-hidden">
  <div class="container m-auto py-5 px-5 flex md:items-baseline items-center">
    <%= link_to "RubyJobs.pl", root_path, class: "text-2xl text-red-800 font-bold" %>
    <div class="hidden md:flex justify-between flex-grow ml-4">
      <div>
        <a class="mr-2" href="<%= "#{root_url}blog" %>">Blog</a>
      </div>
      <div>
        <% if user_signed_in? %>
          <%= link_to('Wyloguj się', destroy_user_session_path, method: :delete, class: 'mr-2') %>        
